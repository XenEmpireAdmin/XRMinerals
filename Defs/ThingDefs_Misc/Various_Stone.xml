    <description>Blocks of solid emperador dark marble.</description>
    <graphicData>
      <color>(92,33,33)</color>
    </graphicData>
    <statBases>
      <MarketValue>1.9</MarketValue>
      <Mass>1</Mass>
      <SharpDamageMultiplier>0.5</SharpDamageMultiplier>
